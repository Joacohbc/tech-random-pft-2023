<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Registro">


    <TextView
        android:id="@+id/tituloRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Registro de Estudiante"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/fondo_oscuro"
        />

    <EditText
        android:id="@+id/documento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:hint="Documento" />

    <EditText
        android:id="@+id/nombres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:hint="Nombres" />

    <EditText
        android:id="@+id/apellidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:hint="Apellidos" />
    <EditText
        android:id="@+id/emailper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:inputType="textEmailAddress"
        android:hint="Email personal"
        android:drawableStart="@drawable/ico_arroba"
        />
    <EditText
        android:id="@+id/emailutec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:inputType="textEmailAddress"
        android:textSize="15dp"
        android:hint="Email Utec"
        android:drawableStart="@drawable/ico_arroba"
    />


    <EditText
        android:id="@+id/telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:hint="Telefono"
        android:drawableStart="@drawable/ico_tel"
    />

    <EditText
        android:id="@+id/fechanac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Fecha de Nacimiento"
        android:inputType="date"
        android:textSize="15dp"
        android:drawableStart="@drawable/ico_calendar"
    />

    <EditText
        android:id="@+id/editTextContraseña"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:hint="Contraseña"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:inputType="textPassword"
        android:drawableStart="@drawable/ico_pass"/>

  <AutoCompleteTextView
      android:id="@+id/genero"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:text="Seleccione su género"
      android:textSize="15dp"
    />

    <Button
        android:id="@+id/loginregistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#00C7FF"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Registro"
        android:textSize="15dp"
        app:iconTint="@color/celeste_utec" />


</LinearLayout>